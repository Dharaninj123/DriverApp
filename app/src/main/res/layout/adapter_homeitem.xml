<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/routeView"
        android:layout_width="25dp"
        android:layout_height="60dp"
        android:src="@drawable/road_icon"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/dotView"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/stop"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="@id/routeView"
        app:layout_constraintStart_toStartOf="@id/routeView"
        app:layout_constraintTop_toTopOf="@id/routeView" />

    <ImageView
        android:id="@+id/bus"
        android:layout_width="25dp"
        android:layout_height="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/routeView"
        app:layout_constraintStart_toEndOf="@id/routeView"
        android:src="@drawable/bus_icon" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dharani"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toStartOf="@id/time"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/bus"
        app:layout_constraintTop_toTopOf="@id/routeView" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance"
        app:layout_constraintBottom_toBottomOf="@id/routeView"
        app:layout_constraintEnd_toStartOf="@id/time"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/bus"
        app:layout_constraintTop_toBottomOf="@id/location"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/routeView"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Time"
        android:paddingEnd="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
