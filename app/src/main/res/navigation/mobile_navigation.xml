<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.drivererp.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >

        <action
                android:id="@+id/action_homeFragment_to_mapFragment"
                app:destination="@id/mapFragment" />

        <action
            android:id="@+id/action_nav_home_to_mapFragment"
            app:destination="@id/mapFragment" />

        <action
            android:id="@+id/action_homeFragment_to_newFragment"
            app:destination="@id/studentLocationFragment" />

    </fragment>

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.drivererp.ui.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.drivererp.ui.Map.MapsFragment"
        android:label="Live Location"
        tools:layout="@layout/fragment_maps" />

    <fragment
        android:id="@+id/nav_aadhaar"
        android:name="com.example.drivererp.ui.AadhaarFragment"
        android:label="Student Aadhaar"
        tools:layout="@layout/fragment_aadhaar" />

    <fragment
        android:id="@+id/nav_license"
        android:name="com.example.drivererp.ui.LicenseFragment"
        android:label="Student License"
        tools:layout="@layout/fragment_aadhaar" />

    <fragment
        android:id="@+id/nav_insurance"
        android:name="com.example.drivererp.ui.InsuranceFragment"
        android:label="Student Insurance"
        tools:layout="@layout/fragment_insurance" />

    <fragment
        android:id="@+id/nav_Documents"
        android:name="com.example.drivererp.ui.DocumentFragment"
        android:label="Student Documents"
        tools:layout="@layout/fragment_document" />

    <fragment
        android:id="@+id/studentLocationFragment"
        android:name="com.example.drivererp.ui.studentlocation.StudentsFragment"
        android:label="Student Fragment" />

</navigation>
